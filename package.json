{
  "name": "fmd",
  "version": "1.0.0",
  "description": "Wordpress Theme",
  "main": "index.php",
  "scripts": {
    "run-scss": "sass scss/normal.scss css/normal.css -w -s compressed",
    "run-js": "esbuild ./js/index.js --bundle --outfile=./js/dist/scripts.bundle.min.js --target=es6,chrome58,edge18,firefox54,safari11 --watch",
    "build-css": "postcss css/normal.css -o ./css/theme-bundle.css --use autoprefixer -m",
    "build-js": "esbuild ./js/index.js --bundle --minify --outfile=./js/dist/scripts.bundle.min.js --target=es6,chrome58,edge18,firefox54,safari11 --sourcemap"
  },
  "devDependencies": {
    "esbuild": "^0.18.16"
  }
}